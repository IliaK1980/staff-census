@model StaffCensus.UI.Models.EmployeeViewModel

@{
    ViewBag.Title = "Добавить сотрудника";
}

<h2 class="mb-4">Добавить сотрудника</h2>

@using (Html.BeginForm("Add", "Home", FormMethod.Post, new { @class = "row g-3" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row mb-3">
        <div class="col-md-6">
            @Html.LabelFor(m => m.FirstName, "Имя", new { @class = "form-label" })
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>
        <div class="col-md-6">
            @Html.LabelFor(m => m.LastName, "Фамилия", new { @class = "form-label" })
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            @Html.LabelFor(m => m.Age, "Возраст", new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Age, new { @class = "form-control" })
        </div>
        <div class="col-md-4">
            @Html.LabelFor(m => m.Gender, "Пол", new { @class = "form-label" })
            @Html.DropDownListFor(m => m.Gender, new SelectList(new[] { "Male", "Female" }), new { @class = "form-select" })
        </div>
        <div class="col-md-4">
            @Html.LabelFor(m => m.DepartmentId, "Отдел", new { @class = "form-label" })
            @Html.DropDownListFor(m => m.DepartmentId, Model.Departments, new { @class = "form-select" })
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            @Html.LabelFor(m => m.ProgrammingLanguageIds, "Языки программирования", new { @class = "form-label" })
            @Html.ListBoxFor(m => m.ProgrammingLanguageIds, Model.ProgrammingLanguages, new { @class = "form-select", multiple = "multiple" })
        </div>
    </div>

    <div class="d-grid gap-2 d-md-block">
        <button type="submit" class="btn btn-primary">Добавить</button>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Отмена</a>
    </div>
}

<script>
    $(document).ready(function() {
        $('#ProgrammingLanguageIds').select2({
            placeholder: 'Выберите языки программирования',
            width: '100%'
        });
    });
</script>